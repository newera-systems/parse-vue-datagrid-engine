{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./demo",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "dev/**/*.ts",
    "dev/**/*.d.ts",
    "dev/**/*.tsx",
    "dev/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}