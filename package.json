{
  "name": "datagrid-bvue",
  "version": "0.1.0",
  "description": "DataGrid based on bootstrap vue",
  "keywords": [
    "datagrid",
    "Bootstrap v4",
    "Bootstrap for Vue",
    "Vue",
    "table"
  ],
  "author": "NewEra Systems",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "vite",
    "prebuild": "rimraf dist",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "build:demo": "vite build --mode development",
    "test:unit": "jest",
    "test": "yarn test:unit",
    "preview": "vite preview --mode development",
    "pre-commit": "yarn run lint && yarn run prettier",
    "lint": "eslint  --fix  ./src/ ./dev/ --ext .js,.ts,.vue",
    "prettier": "prettier --write  src/ spec/ dev/"
  },
  "type": "module",
  "main": "./dist/datagrid-bvue.umd.cjs",
  "module": "./dist/datagrid-bvue.js",
  "types": "./dist/datagrid-bvue.d.ts",
  "style": "./dist/style.css",
  "exports": {
    ".": {
      "types": "./dist/datagrid-bvue.d.ts",
      "import": "./dist/datagrid-bvue.js",
      "require": "./dist/datagrid-bvue.umd.cjs"
    },
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/newera-systems/parse-vue-datagrid-engine.git",
    "branch": "master"
  },
  "dependencies": {
    "bootstrap-vue": "^2.23.1",
    "dayjs": "^1.11.6",
    "flag-icons": "^6.6.6",
    "lodash": "^4.17.21",
    "query-builder-vue": "^1.2.0",
    "ts-money": "^0.4.8",
    "vue-i18n": "^8",
    "vue-select": "^3.20.0",
    "vuedraggable": "^2.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@types/jest": "^29.2.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.9",
    "@types/vue-select": "^3.16.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@vue/test-utils": "^1.3.3",
    "@vue/vue2-jest": "^29.2.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "*",
    "vite": "^4.1.4",
    "vue": "^2.7.14",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.7.14",
    "vue-tsc": "^1.0.9"
  },
  "peerDependencies": {
    "vue": "^2.7.14"
  }
}
